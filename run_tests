#!/bin/bash

SUCC=sugar/tests/success
FAIL=sugar/tests/fail
BIN=llp

echo "== should succeed (0) =="
for i in $(ls $SUCC); do
    FILE=$SUCC/$i
    $BIN $FILE > /dev/null
    echo $?: $FILE
done

echo "== should fail (1) =="
for i in $(ls $FAIL); do
    FILE=$FAIL/$i
    $BIN $FILE > /dev/null
    echo $?: $FILE
done

